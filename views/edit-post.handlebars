<h2>Edit post</h2>
<div class="row justify-space-between-md col-10">
    <form id="edit-post-form">
        <div class="mb-3">
            <label for="post-title" class="form-label">Title</label>
            <input name="post-title" type="text" class="form-control" id="post-title" aria-describedby="post-title">
        </div>
        <div class="mb-3">
            <label for="post-body" class="form-label">Message</label>
            <textarea name="post-body" type="text" class="form-control" id="post-body"
                placeholder="Write your post here"></textarea>
        </div>
        <button type="submit" class="btn btn-outline-dark col-3">Submit</button>
    </form>
</div>

<script src="/js/edit.js"></script>