<h1>all posts here</h1>
<ol class="post-list">
    {{#each posts as |post|}}
    <li>
        <article class="post">
            <div class="title">
                <h2>{{title}}</h2>
                <h4>{{user.username}}</h4>
                {{!-- <span>{{format_date created_at}}</span> --}}
                <p>{{body}}</p>
            </div>

            <div class="meta">
                <a href="/post/{{id}}">{{comments.length}}</a>
            </div>
        </article>
        {{!-- {{> post-info post}} --}}
    </li>
    {{/each}}
</ol>